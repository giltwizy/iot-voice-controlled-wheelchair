<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main">

    <LinearLayout
        android:id="@+id/firstRow"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/darkBlueLessOpacity">

        <Button
            android:id="@+id/connect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/connect"
            android:textColor="@color/white"
            android:background="@drawable/button_bg"/>

        <Button
            android:id="@+id/disconnect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/disconnect"
            android:onClick="disconnectBluetooth"
            android:textColor="@color/white"
            android:background="@drawable/button_bg"/>

        <Button
            android:id="@+id/languageSelection"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/language"
            android:textColor="@color/white"
            android:background="@drawable/button_bg" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondRow"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/firstRow"
        android:background="@color/darkBlueLessOpacity">

        <TextView
            android:id="@+id/statusLabel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/status"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textStatus"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:gravity="start"
            android:layout_weight="1"
            android:text="@string/disconnected"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <!--

        <TextView
            android:id="@+id/language"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Lang:"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/languageValue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="En"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp" />

            -->

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/micCanvas"
        android:layout_below="@id/secondRow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkBlue"
        android:orientation="vertical">

        <TextView
            android:id="@+id/projectTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/project_title"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/textDebug"
            android:textAlignment="center"
            android:layout_below="@+id/projectTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="51dp" />

        <TextView
            android:id="@+id/resultTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:layout_below="@id/projectTitle"
            android:textColor="@color/white"
            android:text="@string/result"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/micImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:onClick="getSpeechInput"
            android:layout_gravity="center"
            android:layout_marginStart="150dp"
            android:layout_marginTop="200dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/projectTitle"
            android:padding="10dp"
            android:background="@drawable/circlebackgroundblue"
            android:src="@drawable/ic_mic_black_24dp"
            android:layout_marginLeft="150dp" />

    </RelativeLayout>

</RelativeLayout>